{
    "name": "rmcgirr83/newtopicsneedapproval",
    "type": "phpbb-extension",
    "description": "Adds a new forum permission which can send new topics to moderation.  Once enabled you must set permissions for groups for which forums, under the permissions Misc tab of the forum, you want new topics to be on moderator queue on a per forum basis.",
    "version": "1.0.7",
    "time": "2024-07-17",
    "keywords": [
        "phpbb",
        "extension",
        "profile",
        "communication"
    ],
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Rich McGirr",
            "homepage": "https://www.phpbb.com/customise/db/author/rmcgirr83/contributions",
            "role": "Developer"
        }
    ],
	"require": {
        "php": ">=7.4",
        "phpbb/phpbb": ">=3.3",
        "composer/installers": "~1.0"
	},
    "extra": {
        "display-name": "New Topics Need Approval",
        "soft-require": {
            "phpbb/phpbb": ">=3.3"
        },
        "version-check": {
            "host": "www.phpbb.com",
            "directory": "/customise/db/extension/new_topics_need_approval",
            "filename": "version_check"
        }
    }
}